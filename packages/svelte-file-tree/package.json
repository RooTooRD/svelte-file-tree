{
	"name": "svelte-file-tree",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"build": "svelte-kit sync && svelte-package && publint",
		"prepublishOnly": "pnpm run package",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"test": "vitest --run",
		"test:watch": "vitest"
	},
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		}
	},
	"svelte": "./dist/index.js",
	"types": "./dist/index.d.ts",
	"sideEffects": [
		"**/*.css"
	],
	"files": [
		"dist",
		"!dist/**/*.test.*",
		"!dist/**/*.spec.*"
	],
	"peerDependencies": {
		"svelte": "5.0.0-next.265"
	},
	"devDependencies": {
		"@sveltejs/kit": "^2.7.1",
		"@sveltejs/package": "^2.3.5",
		"@sveltejs/vite-plugin-svelte": "4.0.0-next.8",
		"publint": "^0.2.11",
		"svelte": "5.0.0-next.265",
		"svelte-check": "^4.0.5",
		"typescript": "^5.6.3",
		"vite": "^5.4.9",
		"vitest": "^2.1.3"
	}
}
